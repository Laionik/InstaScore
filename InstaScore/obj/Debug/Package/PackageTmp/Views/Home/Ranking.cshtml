@model IEnumerable<InstaScore.Models.photos>
@{
    ViewBag.Title = "Ranking";
    int count = 0, i = 1;
    Dictionary<int, string> slownik = new Dictionary<int, string>();
    slownik.Add(1, "gold");
    slownik.Add(2, "silver");
    slownik.Add(3, "brown");
    slownik.Add(4, "none");
    slownik.Add(5, "none");
}

<hgroup class="title">
    <h1>@ViewBag.Title</h1>
    <h3>@ViewBag.PhotoMessage</h3>
</hgroup>

<div style="padding:20px;">
    @{

        var x = Model.OrderByDescending(s => s.photoScore).ToList();

        if (x[0].photoTotal > 0)
        {
            <ul class="list-unstyled">
                @while (true)
                {
                    if (x[count].photoVisible)
                    {
                        string size = (60 - 5 * (i - 1)).ToString() + "%";
                        <li>
                            <a href="@x[count].photoURL" target="_blank"><img src="@x[count].photoURL" alt="@x[count].photoURL" style="width:@size; height:auto; border-style:outset; border-color:@slownik[i]; border-width: 5px"></a>
                        </li>
                    <br />
                        i++;
                    }
                    if (i >= 6)
                    {
                        break;
                    }
                    count++;
                }
            </ul>
        }
        else
        {
            <font size="3">Nikt jeszcze nie głosował</font>
        }
    }
</div>