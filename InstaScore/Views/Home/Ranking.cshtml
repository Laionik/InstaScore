@model IEnumerable<InstaScore.Models.photos>
@{
    ViewBag.Title = "Ranking";
    int count = 0, i = 1;
    Dictionary<int, string> slownik = new Dictionary<int, string>();
    slownik.Add(1, "one");
    slownik.Add(2, "two");
    slownik.Add(3, "three");
    slownik.Add(4, "four");
    slownik.Add(5, "five");
}

<hgroup class="title">
    <h1>@ViewBag.Title</h1>
    <h3>@ViewBag.PhotoMessage</h3>
</hgroup>

<div style="padding:20px;">
    @{

        var x = Model.OrderBy(s =>
            {
                if (s.photoTotal == 0)
                    return 0;
                else
                    return s.photoScore / s.photoTotal;
            }).ToList();

        if (x[0].photoTotal > 0)
        {
            <ol class="round">
                @while (true)
                {
                    if (x[count].photoVisible && x[count].photoTotal > 0)
                    {
                        var size = 600 - 100 * i;
                        <li class="@slownik[i]">
                            <a href="@x[count].photoURL"><img src="@x[count].photoURL" alt="@x[count].photoURL" width="@size" height="@size" /></a>
                        </li>
                        i++;
                    }
                    else
                    {
                        break;
                    }
                    count++;
                }
            </ol>
        }
        else
        {
            <font size="3">Nikt jeszcze nie głosował</font>
        }
    }
</div>


