<!DOCTYPE html>
<html lang="pl">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/bootstrapcss")
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    <meta name="viewport" content="width=device-width" />
</head>
<body>
    <div class="navbar navbar-default navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <a href='@Url.Action("Index", "Home")'>
                    <img src='@Url.Content("~/Images/logo.png")' style="width:20%; height:auto;">
                </a>
            </div>
            <div class="navbar-collapse collapse" id="navbar-main">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Zdjęcia", "Photo", "Home")</li>
                    @{if (User.IsInRole("user"))
                    {
                        <li>@Html.ActionLink("Porównywarka", "Compare", "Home")</li>
                    }
                    }
                    <li>@Html.ActionLink("Ranking", "Ranking", "Home")</li>
                    @if (User.IsInRole("admin"))
                    {
                        <li>@Html.ActionLink("Panel administracyjny", "Admin", "Admin")</li>
                    }
                </ul>

                <ul class="nav navbar-nav navbar-right">
                    @Html.Partial("_LoginPartial")

                </ul>
            </div>
        </div>
    </div>

    <div class="container">
        <div class="page-header" id="banner">
            <div class="row">
                <div class="col-lg-8 col-md-7 col-sm-6">
                </div>
            </div>
        </div>

        <div class="bs-docs-section clearfix">
            <div class="row">
                <div class="col-lg-12">
                    @RenderSection("featured", required: false)
                    <section>
                        @RenderBody()
                    </section>
                </div>
            </div>
        </div>



        <br /><br />
        <footer>
            <div class="row">
                <div class="col-lg-12">

                    <ul class="list-inline">
                        <li class="pull-right"><a href="#top">Do góry</a></li>
                        <li><a href="https://twitter.com/laionik">Twitter</a></li>
                        <li><a href="https://github.com/laionik">GitHub</a></li>
                    </ul>
                    <p>
                        <ul class="list-inline">
                            <li>@DateTime.Now.Year - InstaScore</li>
                            <li class="pull-right">@Html.ActionLink("Kontakt", "Contact", "Home")</li>
                            <li class="pull-right">@Html.ActionLink("O nas", "About", "Home")</li>
                            <li class="pull-right">@Html.ActionLink("Strona główna", "Index", "Home")</li>
                        </ul>
                    </p>
                </div>
            </div>

        </footer>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @RenderSection("scripts", required: false)
</body>
</html>