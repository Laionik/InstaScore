@model InstaScore.Models.LocalPasswordModel

<p>
    Nie masz jeszcze ustawionego hasła. 
    Dodaj hasło i adress email byś mógł korzystać z serwisu bez użycia zewnętrznego logowania.
</p>

@using (Html.BeginForm("Manage", "Account")) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary()

    <fieldset>
        <legend>Set Password Form</legend>
        <ol>
            <li>
                @Html.LabelFor(m => m.NewPassword)
                @Html.PasswordFor(m => m.NewPassword)
            </li>
            <li>
                @Html.LabelFor(m => m.ConfirmPassword)
                @Html.PasswordFor(m => m.ConfirmPassword)
            </li>
            <li>
                @Html.LabelFor(m => m.NewEmail)
                @Html.TextBoxFor(m => m.NewEmail)
            </li>
        </ol>
        <input type="submit" value="Ustaw hasło" />
    </fieldset>
}
